            <dataField fieldName="MemberCategoryID" aliasFieldName="MemberCategoryName" hidden="true" />
            <dataField fieldName="LockerBillAmount" columns="15" hidden="true" />
            <dataField fieldName="BookStatus" columns="50" hidden="true" />
          </dataFields>
        </category>
      </categories>
    </view>
  </views>
