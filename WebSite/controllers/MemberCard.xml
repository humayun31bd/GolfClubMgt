  <businessRules>
    <rule id="r100" commandName="Custom" commandArgument="SendPINforCard" type="Code" phase="Execute" />
    <rule id="r101" commandName="Custom" commandArgument="MemverVerifyCard" type="Sql" phase="Execute"><![CDATA[Exec USP_VeryCardPIN @MemberCardID,@Parameters_VerifyCard]]></rule>
    <rule id="r102" commandName="Insert" type="Sql" phase="Before"><![CDATA[Set @CreatedBy = @BusinessRules_Username
Set @IsCardActive = 1

Declare @Dupl int
set @Dupl = 0
if exists(
	SELECT [MemberCardID]
  FROM [dbo].[MemberCard]
  where MemberID=@MemberID
)
begin
Set @Dupl = 1
end
if (@Dupl>0)
begin
set @CardNumber = ''
set @BusinessRules_PreventDefault = 1
    /* set the focus on the field and display an error */
    set @Result_Focus = 'CardNumber,Duplicate Member Card Register.'
end
]]></rule>
    <rule id="r103" commandName="Update" type="Sql" phase="Before"><![CDATA[Set @UpdatedBy = @BusinessRules_Username]]></rule>
    <rule id="r104" type="Sql" commandName="Insert|Update" phase="Before" name="CardNumber_Validator"><![CDATA[if @CardNumber is null
begin
    /* prevent the default action processing */
    set @BusinessRules_PreventDefault = 1
    /* set the focus on the field and display an error */
    set @Result_Focus = 'CardNumber,Required field.'
end
]]></rule>
    <rule id="r105" type="Sql" commandName="Insert|Update" phase="Before" name="MobileNo_Validator"><![CDATA[
if @MobileNo is null
begin
    /* prevent the default action processing */
    set @BusinessRules_PreventDefault = 1
    /* set the focus on the field and display an error */
    set @Result_Focus = 'MobileNo,Required field.'
end
]]></rule>
